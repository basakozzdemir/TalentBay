@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Signup</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/assets/signupfonts/linearicons/style.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/assets/signupcss/style.css">
</head>

<body>
	<div class="wrapper">
		<div class="inner">
			<img src="~/assets/img/signupimg1.png" alt="" class="image-1">
			<form action="">
				<h3>New Account?</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Username">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" class="form-control" placeholder="Mail">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" placeholder="Password">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" class="form-control" placeholder="Confirm Password">
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="flexRadioDefault" id="studentcheck">
					<label class="form-check-label" for="flexRadioDefault1">
						Student
					</label>
				</div>
				<div class="form-check">
					<input class="form-check-input" type="radio" name="flexRadioDefault" id="teachercheck">
					<label class="form-check-label" for="flexRadioDefault1">
						Teacher
					</label>
				</div>
				<button>
					<span>Register</span>
				</button>
			</form>
			<img src="~/assets/img/signupimg2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/assets/js/jquery-3.3.1.min.js"></script>
	<script src="~/assets/js/main.js"></script>
	</body>
</html>
